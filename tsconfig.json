{
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "jsx": "react",
      "declaration": true,
      "declarationDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }